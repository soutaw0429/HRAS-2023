/*LAYOUT FORMATS*/
.main
	{base-color}
	position: relative
	z-index: 0
	min-height: 100vh
	max-width: 100vw

.full-width
	width: 100% !important

.full-height
	height: 100% !important

.no-border
	border: none

.hidden-imp
	display: none

.hv
	border: 0
	-webkit-box-sizing: content-box
	box-sizing: content-box
	overflow: visible
	border-top: 1px solid rgba(0, 0, 0, .1)
	margin: 0 1rem
	width: 2px
	height: 100%
	background-color: #373737