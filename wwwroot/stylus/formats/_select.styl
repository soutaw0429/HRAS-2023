.cs-select 
	cursor: pointer
	display: inline-block
	position: relative
	color: white
	min-width: 5rem
	width: 100%
	height: 3rem
	margin: 0

	select
		display: none

	> span 
		display: block
		position: relative
		background-color: rgba(255,255,255,0.1)
		padding: .7rem .9375rem
		font-weight: bold
		white-space: nowrap
		overflow: hidden
		text-overflow: ellipsis

		&:after
			content: ""
			width: 0
			height: 0
			border: 5px solid transparent;
			border-color: white transparent transparent transparent
			position: absolute
			top: 1.3rem
			right: .5rem

	> .cs-options
		border: none !important
		position: absolute
		overflow: hidden
		visibility: hidden
		width: 100%
		z-index: $top-position
		margin: 0
		padding: 0
		list-style: none
		background-color: rgba(35,35,35,1)
		box-shadow: 0 2px 4px 2px rgba(0,0,0,0.15)

		li 
			margin: 0
			padding: .7rem .9375rem

			&:hover
				background-color: rgba(55,55,55,1)

	:focus
		outline: none

.cs-select.cs-active
	.cs-options
		visibility: visible