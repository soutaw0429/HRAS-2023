@{

<style>
        body {
            margin: 0px;
        }

        #inventory_page {
            margin-top: 50px;
        }

        #inventory {
            display: inline-block;
            width: 80%;
            horizontal-align: center;
        }


        #first_row {
            height: 50px;
        }

        #search input {
            font-size: 20px;
            padding-left: 20px;
            height: 35px;
            border: 1px solid rgba(0,0,0,0.3);
        }

        #search_table {
            width: 80%;
            margin-left: auto;
            margin-right: auto;
        }

            #search_table td {
            }

        #quantity {
            width: 5%;
        }

        #id_box {
            width: 85%;
        }

        #name_box {
            width: 85%;
        }

        #quantity_box {
            width: 65%;
        }

        #add_item {
            padding: 20px;
            text-align: right;
            padding-right: 5%;
        }

        #add_another_item {
            background-color: #d7d7db;
            border: none;
            color: black;
            padding: 10px 30px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 15px;
            cursor: pointer;
            font-weight: bold;
        }

        #information {
            margin-top: 50px;
        }

        #info_table {
            margin-left: 10%;
            margin-right: 10%;
            text-align: left;
        }

            #info_table th {
                font-size: 18px;
                padding-bottom: 10px;
            }

            #info_table td {
                padding-top: 10px;
                padding-bottom: 10px;
            }

        #item_id {
            width: 15%;
        }

        #item_name {
            width: 30%;
        }

        #item_price {
            width: 15%;
        }

        #item_stock_count {
            width: 40%;
        }

        #item_deploy {
            width: 20%;
        }



        #deploy {
            background-color: #d7d7db;
            border: none;
            color: black;
            padding: 10px 30px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 15px;
            cursor: pointer;
            font-weight: bold;
        }


        #patients_cart {
            background-color: grey;
            display: inline-block;
            width: 20%;
            height: 100%;
            vertical-align: top;
        }

        #cart {
            margin-left: auto;
            margin-right: auto;
            width: 80%;
            color: white;
        }

        #patients_cart td {
            font-size: 30px;
        }

            #patients_cart td:nth-child(2) {
                text-align: right;
            }

        #patients_cart_text {
            font-size: 40px;
            text-align: center;
        }

        #assign_to_patient {
            margin-top: 100%;
            text-align: center;
        }

        #assign {
            background-color: black;
            border: none;
            color: white;
            padding: 15px 35px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            cursor: pointer;
            box-shadow: 0 4px #999;
            border-radius: 4px;
            margin-bottom: 5%;
        }
        }
</style>
<div id=inventory_page>
        <div id=inventory>
            <div id=search>
                <table id=search_table>
                    <tr id=first_row>
                        <td>PRODUCT ID</td>
                        <td>NAME </td>
                        <td>QUANTITY</td>
                    </tr>
                    <tr>
                        <td>
                            <input id=id_box type="text">
                        </td>
                        <td>
                            <input id=name_box type="text">
                        </td>
                        <td id=quantity>
                            <input id=quantity_box type="text">
                        </td>
                    </tr>
                </table>
            </div>
            <div id=add_item>
                <button id=add_another_item>
                    ADD ANOTHER ITEM
                </button>
            </div>
            <div id=information>
                <table id=info_table>
                    <tr>
                        <th id=item_id>Item ID</th>
                        <th id=item_name>Name</th>
                        <th id=item_price>Price</th>
                        <th id=item_stock_count>Stock Count</th>
                        <th id=item_deploy>Deploy</th>
                    </tr>
                    <tr>
                        <td>######</td>
                        <td>ABCDEF</td>
                        <td>$</td>
                        <td>##</td>
                        <td><button id=deploy>Deploy</button></td>
                    </tr>
                </table>
            </div>
        </div><div id=patients_cart>
            <div id=lists>
                <table id=cart>
                    <tr>
                        <th colspan="2" id=patients_cart_text>Patients Cart</th>
                    </tr>
                    <tr>
                        <td> Item </td>
                        <td> x1 </td>
                    </tr>
                </table>
            </div>
            <div id=assign_to_patient>
                <button id=assign>ASSIGN TO PATIENT</button>
            </div>
        </div>
</div>
}
